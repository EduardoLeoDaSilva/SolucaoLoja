@model List<Produto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Catalogo de Produtos</title>
</head>
<body>

    <ul>

        @foreach (var p in Model)
        {

            <li>
                Nome: @p.Nome <br />
                Preço @p.Preco <br />
                Codigo do Produto <br />

                <button asp-action="Carrinho">Adicionar no carrinho</button> <br />
                <button asp-action="Cadastro">Cadastro</button>

            </li>

        }


    </ul>




</body>
</html>